generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(cuid())
  email                String                @unique
  role                 String                @default("USER")
  password             String?
  name                 String?
  image                String?
  balanceTRY           Float                 @default(100000)
  balanceUSD           Float                 @default(10000)
  aiCredits            Int                   @default(5)
  aiCreditsTotal       Int                   @default(5)
  aiCreditsResetAt     DateTime              @default(now())
  subscriptionTier     String                @default("FREE")
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  alerts               Alert[]
  globalAlerts         GlobalMarketAlert[]
  notificationSettings NotificationSettings?
  portfolios           Portfolio[]
  indices              UserIndex[]
  watchlists           Watchlist[]
  notifications        Notification[]
  payments             PaymentTransaction[]
  preferences          Json?                 @default("{}") // Stores UI preferences like widget visibility
}

// ... (other models) ...

model Portfolio {
  id        String   @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades    Trade[]
}

model NotificationSettings {
  id               String   @id @default(cuid())
  userId           String   @unique
  telegramChatId   String?
  telegramEnabled  Boolean  @default(false)
  emailEnabled     Boolean  @default(false)
  siteEnabled      Boolean  @default(true)
  
  // SMTP Settings
  smtpHost         String?
  smtpPort         Int?
  smtpUser         String?
  smtpPassword     String?
  smtpSecure       Boolean  @default(true) // true for 465, false for 587 (usually) with StartTLS
  
  verificationCode String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  link      String?
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, ERROR
  sendInApp Boolean  @default(true)
  sendBrowser Boolean @default(false)
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
}

model GlobalMarketAlert {
  id              String    @id @default(cuid())
  userId          String
  symbol          String
  type            String
  threshold       Float
  cooldown        Int       @default(60)
  lastTriggeredAt DateTime?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, symbol])
}

model NewsAnalysis {
  id          String   @id @default(cuid())
  symbol      String
  url         String   @unique
  title       String
  sentiment   Float
  summary     String
  publishedAt DateTime
  createdAt   DateTime @default(now())
  market      String   @default("US")

  @@index([symbol])
}

model Watchlist {
  id        String          @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WatchlistItem[]
}

model WatchlistItem {
  id          String    @id @default(cuid())
  watchlistId String
  symbol      String
  market      String
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  watchlist   Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, symbol, market])
}



model Trade {
  id          String    @id @default(cuid())
  portfolioId String
  symbol      String
  market      String
  type        String
  quantity    Float
  price       Float
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
}

model Alert {
  id        String     @id @default(cuid())
  userId    String
  symbol    String
  market    String
  type      String
  target    Float
  status    String
  triggerLimit    Int      @default(1)
  currentTriggers Int      @default(0)
  lastTriggeredAt DateTime?
  cooldown        Int      @default(60) // Seconds
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs      AlertLog[]

  @@index([symbol, market, status])
}

model AlertLog {
  id          String   @id @default(cuid())
  alertId     String
  message     String
  triggeredAt DateTime @default(now())
  alert       Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
}

model BistSymbol {
  code         String   @id
  title        String
  isActive     Boolean  @default(true)
  lastSyncedAt DateTime @default(now())

  @@index([title])
}

model UserIndex {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
  @@index([userId, order])
}

model SystemSetting {
  key         String   @id
  value       String
  description String?
  category    String   @default("GENERAL") // AI, MARKET, SYSTEM, NOTIFICATION
  isSecret    Boolean  @default(false)     // specific keys should be masked in UI
  updatedAt   DateTime @updatedAt
}

model PaymentTransaction {
  id          String    @id @default(cuid())
  userId      String
  package     String    // 'BASIC', 'PRO'
  amount      Float
  senderName  String
  status      String    @default("PENDING") // 'PENDING', 'APPROVED', 'REJECTED'
  createdAt   DateTime  @default(now())
  processedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model BankAccount {
  id            String   @id @default(cuid())
  bankName      String
  accountHolder String
  iban          String
  branchCode    String?
  accountNumber String?
  logoUrl       String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Package {
  id          String   @id @default(cuid())
  name        String   @unique // e.g. "PRO", "BASIC"
  displayName String   // e.g. "Pro Paket"
  price       Float
  credits     Int      // Monthly AI credits
  maxAlerts   Int      @default(2) // Max concurrent alerts
  features    String[] // List of features
  isPopular   Boolean  @default(false)
  color       String?  // Hex code or tailwind class for badge/border
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("UNREAD") // UNREAD, READ, REPLIED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ipo {
  id                 String   @id @default(cuid())
  code               String   @unique
  company            String
  date               String?  // e.g. "28-29-30 Ocak 2026"
  price              String?  // e.g. "21,50 TL"
  lotCount           String?  // e.g. "54,700,000 Lot"
  market             String?  // e.g. "Ana Pazar"
  url                String?
  imageUrl           String?
  distributionMethod String?  // e.g. "Eşit Dağıtım"
  leadUnderwriter    String?  // Aracı Kurum
  firstTradingDate   String?  // Bist İlk İşlem Tarihi
  tags               String[] // For "New", "Talep Toplanıyor" etc.
  status             String   @default("DRAFT") // DRAFT, NEW, ACTIVE
  isNew              Boolean  @default(false)
  showOnHomepage     Boolean  @default(false)  // Anasayfa widget'ında göster
  isLocked           Boolean  @default(false)  // Manuel değişiklikleri korumak için kilitle
  sortOrder          Int      @default(0)      // Manuel sıralama (Yüksek numara üstte)
  
  // Custom Status Text (Override)
  statusText         String?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Detailed Info (formerly scraped)
  summaryInfo        Json?    // Detailed sections like Funds Use, Allocations, etc.
}



