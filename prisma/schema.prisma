generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(cuid())
  email                String                @unique
  role                 String                @default("USER")
  password             String?
  name                 String?
  image                String?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  balanceTRY           Float                 @default(100000)
  balanceUSD           Float                 @default(10000)
  aiCredits            Int                   @default(5)
  aiCreditsResetAt     DateTime              @default(now())
  aiCreditsTotal       Int                   @default(5)
  subscriptionTier     String                @default("FREE")
  preferences          Json?                 @default("{}")
  alerts               Alert[]
  globalAlerts         GlobalMarketAlert[]
  notifications        Notification[]
  notificationSettings NotificationSettings?
  payments             PaymentTransaction[]
  portfolios           Portfolio[]
  indices              UserIndex[]
  watchlists           Watchlist[]
}

model Portfolio {
  id        String   @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades    Trade[]
}

model NotificationSettings {
  id               String   @id @default(cuid())
  userId           String   @unique
  telegramChatId   String?
  telegramEnabled  Boolean  @default(false)
  emailEnabled     Boolean  @default(false)
  verificationCode String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  smtpHost         String?
  smtpPassword     String?
  smtpPort         Int?
  smtpSecure       Boolean  @default(true)
  smtpUser         String?
  siteEnabled      Boolean  @default(true)
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  title       String
  message     String
  type        String   @default("INFO")
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  link        String?
  sendBrowser Boolean  @default(false)
  sendInApp   Boolean  @default(true)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
}

model GlobalMarketAlert {
  id              String    @id @default(cuid())
  userId          String
  symbol          String
  type            String
  threshold       Float
  cooldown        Int       @default(60)
  lastTriggeredAt DateTime?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, symbol])
}

model NewsAnalysis {
  id          String   @id @default(cuid())
  symbol      String
  url         String   @unique
  title       String
  sentiment   Float
  summary     String
  publishedAt DateTime
  createdAt   DateTime @default(now())
  market      String   @default("US")

  @@index([symbol])
}

model Watchlist {
  id        String          @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WatchlistItem[]
}

model WatchlistItem {
  id          String    @id @default(cuid())
  watchlistId String
  symbol      String
  market      String
  createdAt   DateTime  @default(now())
  order       Int       @default(0)
  watchlist   Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, symbol, market])
}

model Trade {
  id          String    @id @default(cuid())
  portfolioId String
  symbol      String
  market      String
  type        String
  quantity    Float
  price       Float
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
}

model Alert {
  id              String     @id @default(cuid())
  userId          String
  symbol          String
  market          String
  type            String
  target          Float
  status          String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  cooldown        Int        @default(60)
  currentTriggers Int        @default(0)
  lastTriggeredAt DateTime?
  triggerLimit    Int        @default(1)
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs            AlertLog[]

  @@index([symbol, market, status])
}

model AlertLog {
  id          String   @id @default(cuid())
  alertId     String
  message     String
  triggeredAt DateTime @default(now())
  alert       Alert    @relation(fields: [alertId], references: [id], onDelete: Cascade)
}

model BistSymbol {
  code         String   @id
  title        String
  isActive     Boolean  @default(true)
  lastSyncedAt DateTime @default(now())

  @@index([title])
}

model UserIndex {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
  @@index([userId, order])
}

model SystemSetting {
  key         String   @id
  value       String
  description String?
  category    String   @default("GENERAL")
  isSecret    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
}

model PaymentTransaction {
  id          String    @id @default(cuid())
  userId      String
  package     String
  amount      Float
  senderName  String
  status      String    @default("PENDING")
  createdAt   DateTime  @default(now())
  processedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model BankAccount {
  id            String   @id @default(cuid())
  bankName      String
  accountHolder String
  iban          String
  branchCode    String?
  accountNumber String?
  logoUrl       String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Package {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  price       Float
  credits     Int
  features    String[]
  isPopular   Boolean  @default(false)
  color       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  maxAlerts   Int      @default(2)
  canSeeEditorChoices Boolean @default(false)
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("UNREAD")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ipo {
  id                 String   @id @default(cuid())
  code               String   @unique
  company            String
  date               String?
  price              String?
  lotCount           String?
  market             String?
  url                String?
  imageUrl           String?
  distributionMethod String?
  leadUnderwriter    String?
  tags               String[]
  status             String   @default("DRAFT")
  isNew              Boolean  @default(false)
  statusText         String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  summaryInfo        Json?
  firstTradingDate   String?
  showOnHomepage     Boolean  @default(false)
  isLocked           Boolean  @default(false)
  sortOrder          Int      @default(0)
}

model EconomicEvent {
  id          String   @id @default(cuid())
  externalId  String?
  title       String
  time        String
  date        String
  countryCode String
  currency    String?
  importance  String   @default("low")
  actual      String?
  forecast    String?
  previous    String?
  isManual    Boolean  @default(false)
  isLocked    Boolean  @default(false)
  sortOrder   Int      @default(0)
  symbol      String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date, time, countryCode, title])
  @@index([date])
}

model RestrictedStock {
  id        String   @id @default(cuid())
  code      String
  company   String
  measure   String
  measureCredit Boolean @default(false) // Kredili Alım ve Açığa Satış
  measureGross  Boolean @default(false) // Brüt Takas
  measureSingle Boolean @default(false) // Tek Fiyat
  measureOrder  Boolean @default(false) // Emir Paketi
  measureNet    Boolean @default(false) // İnternet Emir Yasağı
  startDate String
  endDate   String
  sortOrder Int      @default(0)
  isLocked  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([code, measure, startDate])
  @@index([sortOrder])
}

model MarketSummary {
  id          String   @id @default(cuid())
  date        String   @unique // Format: YYYY-MM-DD
  data        Json     // Stores movers, indices, results
  editorNote  String?  @db.Text
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}
model EditorChoice {
  id              String   @id @default(cuid())
  symbol          String
  title           String
  content         String   @db.Text
  technicalReview String?  @db.Text
  fundamentalReview String? @db.Text
  targetPrice     Float?
  stopLoss        Float?
  chartUrl        String?
  isPublished     Boolean  @default(true)
  publishedAt     DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([symbol])
  @@index([publishedAt])
}

model AdPlacement {
  id          String   @id @default(cuid())
  label       String   
  location    String   @unique 
  adCode      String   // Full HTML/Script
  isActive    Boolean  @default(true)
  platform    String   @default("ALL") // ALL, DESKTOP, MOBILE
  maxWidth    String?  // e.g. "728px" or "100%"
  maxHeight   String?  // e.g. "90px"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Page {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text // Markdown content
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  excerpt     String?  @db.Text
  imageUrl    String?
  category    String?
  isPublished Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([isPublished, publishedAt])
}
